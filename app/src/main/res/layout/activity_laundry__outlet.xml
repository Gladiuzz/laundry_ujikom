<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EEEE"
    tools:context=".Laundry_package">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nav_drawer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/toolbara2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bg_Primary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/search_package2"
                android:layout_width="270dp"
                android:layout_height="34dp"
                android:layout_marginTop="95dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/border_black"
                android:hint="Search Packet"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="12dp"
                android:paddingLeft="12.4dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_search_main_24dp"
                android:shadowRadius="7"/>

            <ProgressBar
                android:id="@+id/progress_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/data_paket2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_package2"
                android:layout_marginTop="20dp">



            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/navigation_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="33dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/bg_Primary"
                android:src="@drawable/ic_add_black_24dp"
                android:elevation="7dp"
                app:maxImageSize="24.61dp" />
        </RelativeLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view2"
            app:headerLayout="@layout/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:itemTextColor="@android:color/darker_gray"
            app:itemIconTint="@color/bg_Primary"
            app:menu="@menu/menu"
            android:layout_gravity="start">



        </com.google.android.material.navigation.NavigationView>





    </androidx.drawerlayout.widget.DrawerLayout>





</RelativeLayout>