<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Primary"
    tools:context=".Outlet_create">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="84dp"
        android:text="Create"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="132dp"
        android:text="New Outlet"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/alamat"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/border_transparent"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_regular"
        android:hint="Alamat"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_outlet"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/nama_outlet"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/border_transparent"
        android:drawableStart="@drawable/ic_laundry_shop2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_regular"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_transparent"
        android:drawableStart="@drawable/ic_local_phone_black_24dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_regular"
        android:hint="Telephone"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alamat" />

    <Button
        android:id="@+id/btn_outlet"
        android:layout_width="272dp"
        android:layout_height="37dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_white"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="center"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/bg_Primary"
        android:textColorHint="@color/bg_Primary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

</androidx.constraintlayout.widget.ConstraintLayout>